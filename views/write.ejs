<%- include('head')%>
<!-- include libraries(jQuery, bootstrap) -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!-- include summernote css/js -->
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<style>
  a{color: #2B2B2B;}
  a:hover{

    text-decoration: none;
  }
  .note-editable{
    min-height: 500px;
    max-height: 500px;
  }
  .modal-backdrop{
    z-index: 1;
    background: transparent;
  }
</style>
</head>
<body class="color1">
<%- include('header')%>
<div class="containerWrite">
  <div class="inputBoxouter board_nameBox ht40" >
    <div class="inputBox">
        <input type="text" placeholder="제목" maxlength="40" id="board_title" />
    </div>
  </div>
  <textarea id="board_comment" name="editordata"></textarea>

  <div class="writeFooter">
    <div class="inputBoxouter ib ht40 wd170">
      <div class="inputBox">
          <input type="text" placeholder="작성자" maxlength="5" id="board_name" />
      </div>
    </div><!--
    --><div class="inputBoxouter ib ht40 wd170">
        <div class="inputBox">
            <input type="password" placeholder="비밀번호" maxlength="12" id="board_password"/>
        </div>
    </div>
    <button type="button" class="button style1 small" id="board_btn" onclick="boardBtn()">게시글 등록</button>
  </div>

</div>
<script>
  $(document).ready(function() {
     $('#board_comment').summernote();
  })
</script>
</body>
<script src="/js/write.js"></script>
<%- include('footer')%>